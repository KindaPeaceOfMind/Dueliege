datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int        @id @default(autoincrement())
  login          String     @unique
  password       String
  token          String?
  skills         playerStats[]
}

model playerStats {
  id          Int     @id @default(autoincrement())
  hp          Int?
  armor       Int?
  stamina     Int?
  mana        Int?
  skills      String?
  buffs       String?
  lvl         Int?
  stats       String?
  
  User        User? @relation(fields: [userId], references: [id])
  userId      Int?
}

model Maps {
  id       Int        @id @default(autoincrement())
  active   Boolean    @default(false)
  name     String?
  body     String?
  Sessions Sessions[]
}

model Sessions {
  id     Int    @id @default(autoincrement())
  user1  String?
  user2  String?
  active String?
  
  map    Maps?  @relation(fields: [mapId], references: [id])
  mapId  Int?
}
